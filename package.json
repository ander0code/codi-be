{
	"name": "codi-be",
	"description": "Codi Backend",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts ",
		"build": "npx prisma generate && tsc && tsc-alias && cpx \"src/**/*.json\" dist",
		"start": "node dist/index.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint . --ext .ts,.js --fix",
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev --name test-migration",
		"prisma:studio": "prisma studio",
		"format": "prettier --write \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
		"check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
		"commitlint": "commitlint --from=HEAD~1 --to=HEAD",
		"prepare": ""
	},
	"dependencies": {
		"@auth/core": "^0.41.1",
		"@auth/express": "^0.12.1",
		"@prisma/client": "^6.18.0",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.2",
		"body-parser": "^2.2.0",
		"compression": "^1.8.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-rate-limit": "^8.1.0",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"prisma": "^6.18.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.18.3",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/js": "^9.38.0",
		"@types/bcrypt": "^6.0.0",
		"@types/body-parser": "^1.19.6",
		"@types/compression": "^1.8.1",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.9.1",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"cpx": "^1.5.0",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"prisma-zod-generator": "^1.30.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b"
}
